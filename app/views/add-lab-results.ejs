<!doctype html>

<!--::header part start::-->
<%- include('partial-views/header.ejs') %>
<!--::header part end::-->

<!-- breadcrumb start-->
<%- include('partial-views/breadcrumb_part.ejs') %>

<!-- breadcrumb end-->
<section class="pb-5 pt-3">
    <div class="container">
        <%- include('partial-views/return-to-dashboard.ejs') %>
        <div class="row justify-content-center text-center">
            <%- include('feedback-messages-ajax.ejs') %>
            <div class="col-lg-12 mb-3">
                <h2 class="mb-3 ">Attach Lab Results</h2>
                <hr>
            </div>
            <div class="col-lg-12 col-md-8"> 
                <%- include('partial-views/feedback-modal.ejs') %>
                <select class="form-control mb-3" id="select-patient">
                    <option selected>Select Patient</option>
                    <% facilitatorAuthorizedPatientsEmails.forEach( (patient) => {%>
                        <%if(patient) { %>
                        <option value="<%=patient.email%>"><%=patient.name%></option>
                        <% } %>
                        <% }); %>
                    </select>
                    <div class="invalid-feedback">Please Choose a Patient</div>
                    <div class="mt-2 mb-3">
                        <input class="form-control" type="text" name="facilitator-name" id="facilitator-name"
                        placeholder="<%=facilitator_name%>" disabled value="<%=facilitator_name%>"
                        class="single-input">
                        <input class="form-control" type="hidden" name="facilitator-email" id="facilitator-email"
                        placeholder="<%=facilitator_email%>" disabled value="<%=facilitator_email%>"
                        class="single-input">
                    </div>
                    <form action="/user/labTechnician/add-lab-results" id="lab-attachments" class="dropzone p-2 mb-4 needs-validation form1" name="lab-attachments" enctype="multipart/form-data" novalidate>
                        <div class=" form-group fallback">
                            <input name="file" type="file" multiple required />
                        </div>
                        <div class="invalid-feedback">Please drop one or more files</div>
                    </form>
                    <div class="regerv_btn mt-10">
                        <button type="submit" form="lab-attachments" class="btn_2" id="add-lab-res">Submit
                            results</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- footer part start-->
<%- include('partial-views/footer.ejs') %>

<!-- footer part end-->

